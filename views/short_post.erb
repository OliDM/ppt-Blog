<% posts.each do |post| %>

<div class="blog-post">
	<h4 class="blog-post-title"><%= post.title %></h4>
	<small>
		<span>Written by:</span>
		<label class="blog-post-autor"><%= post.author %></label> <br>
	</small>
	<h6>
		<% post.tag_list.each do |tag| %>
		<b><a href="/tags/<%= tag%>"><%= tag%></a></b>
		<% end %>
	</h6>
	<p><%= post.short_description%></p>
</div><!-- /.blog-post -->
<% end %>